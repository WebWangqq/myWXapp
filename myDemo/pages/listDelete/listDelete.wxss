.messageCon{margin-top:30rpx;}
.messageCon .item{position:relative;border-bottom:1rpx solid #dcdcdc;}
.messageCon .item .itemText{position:relative;height:48px;padding:10px;line-height:24px;font-size:14px;background-color:#fff;z-index:2;}
.messageCon .item .itemText view{height:48px;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
overflow: hidden;
}
.messageCon .item .itemDelete{position:absolute;top:0;right:0;display:flex;align-items:center;width:14px;padding:0 20px;height:68px;background-color:#f00;z-index:1}
.messageCon .item .itemDelete text{font-size:14px;color:#fff;}
