.topCon{width:100%;padding:0 10px 10px 10px;background-color:#cea76e;box-sizing:border-box;}
.topCon .current{line-height:40px;color:#ffffff;font-size:14px;}
.topCon .searchCon{height:36px;line-height:36px;text-align:center;color:#8e8e8e;font-size:12px;background-color:#ffffff;border-radius:36px;}

.mapCon{width:100%;height:100%;}
.modalMask{position:fixed;bottom:0;left:0;width:100%;height:180rpx;background-color:#ffffff;z-index:1000;}
.modalMask .name{height:40rpx;padding:15rpx 20rpx 0;}
.modalMask .addressCon{height:45rpx;padding:0 20rpx;font-size:24rpx;color:#8c8c8c;-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box;display:box;display:-moz-box;display:-webkit-box;}
.modalMask .addressCon .address{display:block;box-flex:1; -moz-box-flex:1; -webkit-box-flex:1;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.modalMask .addressCon .juli{display:block;margin-left:10px;color:#ff801a;}
.btnCon{position:relative;font-size:0;border-top:1rpx solid #dcdcdc;}

.btnCon .btn{display:inline-block;width:50%;font-size:30rpx;text-align:center;line-height:80rpx}
.btnCon .btn:nth-child(1){color:#4e8bed;}
.btnCon .btn:nth-child(2){color:#ff801a;border-left:1rpx solid #dcdcdc;}


