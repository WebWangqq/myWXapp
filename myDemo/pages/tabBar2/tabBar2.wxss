.mySwiperCon .current .item{opacity:1}
.mySwiperCon .itemCon .item:nth-child(2){border-bottom:none;}
.mySwiperCon .itemCon .item image{width:100rpx;height:100rpx;border-radius:50%;}
.mySwiperCon .itemCon .item .name{line-height:100rpx;box-flex:1; -moz-box-flex:1; -webkit-box-flex:1;}
.mySwiperCon .itemCon .item .btn{width:100rpx;height:60rpx;margin-top:20rpx;color:#ffffff;font-size:24rpx;text-align:center;line-height:60rpx;background-color:#ff0000;border-radius:4rpx;}
