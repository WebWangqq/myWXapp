<!--成绩-->
<view class="overlay gradeBox" wx:if="{{gradeBox}}">
	<view class="navTitle">
		<text class="{{currentNavTab==1?'current':''}}" data-id="1" catchtap="switchGradeTab">抢成功</text>
		<text class="{{currentNavTab==2?'current':''}}" data-id="2" catchtap="switchGradeTab">被抢</text>
		<text class="{{currentNavTab==3?'current':''}}" data-id="3" catchtap="switchGradeTab">新人</text>
		<text class="{{currentNavTab==4?'current':''}}" data-id="4" catchtap="switchGradeTab">到店</text>
		<view class="closeBtn" catchtap="gradeBoxShow"><image class="img2" src="../../img/redPacket/z_xiala@3x.png" /></view>
	</view>
	<view class="hasList" wx:if="{{hasTodayList}}">
		<scroll-view scroll-y="true" bindscrolltolower="gradeListMore" bindscrolltoupper="gradeListRefresh" style="height:{{strategyBoxHeight}}px;">
			<!-- <view class="historyList fontW">历史记录</view> -->
			<view class="listCon">
				<!--item-->
				<view class="itemCon" wx:for="{{grade}}" wx:key="id">
					<view class="item" wx:if="{{item.DType==2?'':'true'}}">
						<view class="logo"><image src="{{item.APPLogo}}" /></view>
						<view class="infoCon">
							<view class="info fontW">
								<view class="textflex">{{item.APPName}}</view>
								<view class="infoRight {{currentNavTab==2 ?'colorBlue': 'colorRed'}}">+{{item.Amount}}</view>
							</view>
							<view class="info small">
								<view class="textflex">{{item.content}}</view>
								<view class="infoRight time">{{item.AddTime}}</view>
							</view>
						</view>
					</view>
					<view class="historyList fontW" wx:if="{{item.DType==2?'true':''}}">历史记录</view>
				</view>
				<!--item end-->
			</view>
			<view wx:if="{{hasMoreGrade}}" class="loading"><image src="../../img/jiazaizhongde.gif" /><text>正在加载</text></view>
			<view wx:if="{{!hasMoreGrade}}" class="loading"><text>没有更多内容了！</text></view>
		</scroll-view>
	</view>
	<view class="noList" wx:if="{{!hasTodayList}}">
		<image src="../../img/redPacket/z_zhanwujinrichengji@3x.png" />
	</view>
</view>
<!--成绩end-->

<!--红包现场-->
<view class="overlay redPacketSceneBox" wx:if="{{redPacketSceneBox}}" catchtap="redPacketSceneBoxShow"></view>
<view class="redPacketSceneBoxContent" wx:if="{{redPacketSceneBox}}" style="margin-top:{{redPacketSceneMtop}}">
	<view class="sceneTitle">
		<view class="numCon">
			<text>{{redPacketNum}}个红包现场</text>
			<image src="../../img/redPacket/z_hongbaoxianchangjinbi@3x.png" />
			<text class="colorRed">¥{{redPacketMoney}}</text>
		</view>
		<view class="tip">每个红包现场达10元可提现</view>
	</view>
	<scroll-view class="redPacketSceneList" scroll-y bindscrolltolower="redPacketSceneListMore" bindscrolltoupper="redPacketSceneListRefresh" style="height:{{redPacketSceneListHeight}}px">
		<view class="item" wx:for="{{redPacketSceneList}}" wx:key="id">
			<view class="info">
				<view class="infoCon">
					<image class="logo" src="{{item.ShopLogo}}" />
					<view class="name">{{item.ShopName}}</view>
					<view class="money">
						<image src="../../img/redPacket/z_xianxingjinbi@3x.png" />
						<text class="colorRed">¥{{item.Balance}}</text>
					</view>
				</view>
				<view class="peopleNum">
					<image class="ico1" src="../../img/redPacket/z_renshu_65.png" />
					<text>{{item.hyTotalCount}}</text>
					<image class="ico2" src="../../img/redPacket/z-gengduojiantou@3x.png" />
				</view>
			</view>
		</view>
		<view wx:if="{{hasMoreRedPacket}}" class="loading"><image src="../../img/jiazaizhongde.gif" /><text>正在加载</text></view>
		<view wx:if="{{!hasMoreRedPacket}}" class="loading"><text>没有更多内容了！</text></view>
	</scroll-view>
</view>


