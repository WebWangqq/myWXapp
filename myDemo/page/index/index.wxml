		<view class="content" wx:if="{{redPacketLength}}" style="height:{{contnetHeight}}px">
			<scroll-view class="itemCon" scroll-y  style="height:{{contnetHeight}}px">
				<view wx:for="{{redPacketList1}}" wx:key="id">
					<view class="item" catchtap="redPacketBoxShow">
						<image class="bg" src="../../img/redPacket/z_hongbao@3x.png" />
						<image class="logo" src="{{item.ShopLogo}}" />
						<text>{{item.ShopName}}</text>
					</view>
				</view>
			</scroll-view>
			<scroll-view class="itemCon" scroll-y  style="height:{{contnetHeight}}px">
				<view wx:for="{{redPacketList2}}" wx:key="id">
					<view class="item" catchtap="redPacketBoxShow">
						<image class="bg" src="../../img/redPacket/z_hongbao@3x.png" />
						<image class="logo" src="{{item.ShopLogo}}" />
						<text>{{item.ShopName}}</text>
					</view>
				</view>
			</scroll-view>
			<scroll-view class="itemCon" scroll-y  style="height:{{contnetHeight}}px">
				<view wx:for="{{redPacketList3}}" wx:key="id">
					<view class="item" catchtap="redPacketBoxShow">
						<image class="bg" src="../../img/redPacket/z_hongbao@3x.png" />
						<image class="logo" src="{{item.ShopLogo}}" />
						<text>{{item.ShopName}}</text>
					</view>
				</view>
			</scroll-view>
			<view class="clear"></view>
		</view>
		<view class="content2" wx:if="{{!redPacketLength}}" style="height:{{contnetHeight}}px">
			<view class="countdownCon">
				<view class="tip">离下次抢红包还剩</view>
				<view class="dateTime clearfix">
					<view class="time">
						<image class="img1" src="../../img/redPacket/z_shijian-@3x.png" />
						<text>{{hour}}</text>
					</view>
					<view class="time2"><image class="img2" src="../../img/redPacket/z_shijiandian@3x.png" /></view>
					<view class="time">
						<image class="img1" src="../../img/redPacket/z_shijian-@3x.png" />
						<text>{{minute}}</text>
					</view>
					<view class="time2"><image class="img2" src="../../img/redPacket/z_shijiandian@3x.png" /></view>
					<view class="time">
						<image class="img1" src="../../img/redPacket/z_shijian-@3x.png" />
						<text>{{second}}</text>
					</view>
				</view>
				<image class="img" src="../../img/redPacket/z_quqiangmiaozhao@3x.png" />
			</view>
		</view>
		<image class="bottomImg" wx:if="{{redPacketLength}}" src="../../img/redPacket/z_hongbaodong@3x.png" />
	</view>
	<!--//scrollView end-->
	

	<!--//myWallet-->
	<view class="myWallet">
		<view class="title clearfix">
			<view class="left"><image class="ico1" src="../../img/redPacket/z_qianbao@3x.png" /><text>我的钱包</text></view>
			<view class="right" catchtap="strategyBoxShow"><image class="ico2" src="../../img/redPacket/z_gonglv@3x.png" /><text>攻略</text></view>
			<view class="right chengji" catchtap="gradeBoxShow"><image class="ico3" src="../../img/redPacket/z_chengji@3x.png" /><text>成绩</text></view>
		</view>
		<!--title end-->
		<view class="content clearfix">
			<view class="left tixian">
				<image class="left tixianImg" src="../../img/redPacket/z_dianjitixian@3x.png" />
				<view class="left tixinCon">
					<image class="tixianImg2" src="../../img/redPacket/z_jinbi_dianjitixian_66.png" />
					<view class="moneyCon"><text>￥</text><text class="money">8.99</text></view>
				</view>
			</view>
			<view class="left redCon" catchtap="redPacketSceneBoxShow">
				<image src="../../img/redPacket/z_hongbaoxianchang@3x.png" />
				<view class="text">红包现场(<text>{{redPacketNum}}</text>)</view>
			</view>
			<view class="left redCon">
				<image src="../../img/redPacket/z_qianggengduohongbao@3x.png" />
				<view class="text colorYellow">抢更多红包</view>
			</view>
			<view class="clear"></view>
		</view>
	</view>
	<!--//myWallet end-->

</view>

