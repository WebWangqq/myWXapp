.tabCon{position:fixed;top:1rpx;left:0;width:100%;height:82rpx;background-color:#fff;z-index:101;}
.tabCon .item{float:left;width:250rpx;height:82rpx;font-size:26rpx;color:#282828;display:flex;justify-content:center;align-items:center;}
.tabCon .item .city{width:186rpx;height:50rpx;margin:0 auto;display:flex;justify-content:center;align-items:center;background-color:#eaeaea;border-radius:50rpx;box-sizing:border-box;}
.tabCon .item .city .text{max-width:140rpx;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.tabCon .item .text{position:relative;font-weight:bold;}	
.tabCon .item .text .ing{position:absolute;top:-6rpx;right:-54rpx;width:58rpx;height:24rpx;display:flex;justify-content:center;align-items:center;color:#ffffff;font-size:16rpx;background-color:#f94e58;border-radius:24rpx;}
.tabCon .item .ico{position:relative;width:25rpx;height:50rpx;}
.tabCon .item .ico:after{content:'';position:absolute;top:50%;right:0;width:0; height:0;border-left:8rpx solid transparent;border-right:8rpx solid transparent;border-top:8rpx solid #757575;border-bottom:none;transform:translate(0,-50%);}
.tabCon .current{color:#f9d33a;}
.tabCon .current .ico:after{border-left:8rpx solid transparent;border-right:8rpx solid transparent;border-bottom:8rpx solid #f9d33a;border-top:none;}

.tabContent{position:absolute;top:81rpx;left:0;width:100%;font-size:28rpx;background-color:#fff;border-top:1rpx solid #f5f5f5; z-index:101;overflow:hidden;}
.tabContent .leftCon{float:left;width:190rpx;background-color:#f3f5f9}
.tabContent .leftCon .item{position:relative;height:88rpx;text-align:center;line-height:88rpx;}
.tabContent .leftCon .current{background-color:#fff;}
.tabContent .leftCon .current:before{content:'';position:absolute;top:50%;left:0;width:6rpx;height:36rpx;margin-top:-18rpx;background-color:#f9d33a}
.tabContent .rightCon{float:left;width:560rpx;}
.tabContent .rightCon .content{max-height:500rpx;overflow-y:auto;}
.tabContent .rightCon .item{height:88rpx;padding:0 75rpx;line-height:88rpx;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.tabContent .rightCon .current{position:relative;color:#f9d33a}
.tabContent .rightCon .current:after{content: ''; position: absolute;right:40rpx; top:50%; width: 14rpx; height: 28rpx;margin-top:-18rpx; border: 0; border-right: 2px solid #f9d33a; border-bottom: 2px solid #f9d33a;transform: rotate(45deg); -webkit-transform: rotate(45deg); -moz-transform: rotate(45deg); -ms-transform: rotate(45deg);}

