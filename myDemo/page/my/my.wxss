.activity{height:234rpx;margin-bottom:30rpx;}
.activity image{width:100%;height:234rpx;}
.activity .wx-swiper-dot{width:10rpx;height: 10rpx;background:#fff;border-radius: 10rpx;display: inline-flex;}
.activity .wx-swiper-dot-active{width:20rpx;}
.currentAddress{padding:20rpx;background-color:#fff;}
.useInfo{padding:50rpx 0;text-align:center;}
.useInfo .avatar{width:200rpx;height:200rpx;margin:0 auto 20rpx;border-radius:50%;border:1px solid #fff;}
.useInfo .nickname{font-size:20px;}
.photo{padding:20rpx;background-color:#f00;text-align:center;color:#fff}

.myImg {padding-top:30rpx;background-color:#fff;}
.myImg .item{float:left;position:relative;width:210rpx;height:210rpx;margin-left:30rpx;margin-bottom:30rpx;box-sizing:border-box;}
.myImg .item.last{border:1px solid #ddd;}
.myImg .item.last:before,.myImg .item.last:after{content:'';position:absolute;top:50%;left:50%;width:160rpx;height:0;margin-left:-80rpx;margin-top:-1px;border-top:2px solid #ddd;}
.myImg .item.last:after{transform: rotate(90deg);}
.myImg .item image{width:210rpx;height:210rpx;background-color:#fff}
.myImg .item icon{position:absolute;top:-10px;right:-10px;width:20px;height:20px;}